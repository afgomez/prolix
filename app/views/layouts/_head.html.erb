<div id="head">
  <div id="logo-area">
    <h1><%= link_to_unless_current 'Prolix', root_path %></h1>
    <p class="tagline">Los hombres del tiempo no siempre adivinan</p>
  </div>
  
  <% form_tag cities_path, :method => 'get', :id => 'search' do %>
    <label>Busca tu localidad</label>
	  <%= select_tag(:id, options_for_select(City.all.map { |c| [c.name, c.nicetitle] })) %>
    <%= submit_tag 'Buscar', :class => 'submit' %>
  <% end -%>
</div>